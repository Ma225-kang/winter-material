<div class="box-form">
  <div class="form-new">
    <div class="title-add"><h1>Add your equipment</h1></div>
    <%= simple_form_for [:owner, @equipment] do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :price_per_day %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'ADD', class: "button" %>
    <% end %>
  </div>
</div>
