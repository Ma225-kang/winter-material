<div class="banner">
  <div class="container">
    <h1>What do you <strong>need</strong> today ?</h1>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" placeholder="Snowboard" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
  </div>
</div>

<div class="box-all-index">
  <div class="box-winter">

    <div class="box-item">
      <div class="item">


        <% @equipment.each do |item| %>

        <div class="card-trip">
          <%= cl_image_tag item.photo, crop: :fill, height: 100 %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to item.name.capitalize, equipment_path(item) %></h2>
              <p><%= item.description.capitalize %></p>
            </div>
            <h2 class="card-trip-pricing"><%= item.price_per_day %><%= 'â‚¬ /day' %></h2>
            <%= cl_image_tag item.owner.photo,class: "card-trip-user avatar-bordered"%>
          </div>
        </div>

        <% end %>


      </div>
    </div>




    <div class="map-container">
      <div
        id="map"
        style="width: 400px;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
