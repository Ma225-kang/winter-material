<div class="box-all-index">

  <div class="box-winter">
    <div class="box-item">
      <div class="item">
        <% @equipment.each do |item| %>
          <div class="card-product">
            <%= cl_image_tag item.photo, class: "image-pdt-card", crop: :fill, height: 100 %>

            <div class="card-product-infos">
              <h2><%= link_to item.name.capitalize, equipment_path(item) %></h2>
              <p><%= item.description.capitalize %></p>
              <p><%= item.price_per_day %><%= 'â‚¬' %></p>
              <%= cl_image_tag item.owner.photo,class: "owner-card-picture"%>
            </div>

          </div>
        <% end %>
      </div>

      <%= link_to new_owner_equipment_path, class: "link-add-equipment" do %>
        <p><i class="fas fa-plus"></i> Add equipment</p>
      <% end %>
    </div>
    <div class="map-container">
      <div
        id="map"
        style="width: 400px;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
