<div class="container-all-index">
  <div class="container-winter">
    <div class="container-item">
      <div class="item">
        <% @equipment.each do |item| %>
          <div class="card-product">
            <%= cl_image_tag item.photo, crop: :fill, height: 100 %>
            <div class="card-product-infos">
              <h2><%= link_to item.name.capitalize, equipment_path(item) %></h2>
              <p><%= item.description.capitalize %></p>
              <p><%= item.price_per_day %><%= 'â‚¬' %></p>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to new_owner_equipment_path, class: "link-add-equipment" do %>
        <p><i class="fas fa-plus"></i> Add equipment</p>
      <% end %>
    </div>
    <div class="map-container">
      <div
        id="map"
        style="width: 400px;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <%= link_to new_owner_equipment_path, class: "link-add-equipment" do %>
    <i class="fas fa-plus"></i> <%= 'Add equipment' %>
  <% end %>
</div>
