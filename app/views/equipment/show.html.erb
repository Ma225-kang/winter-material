          <%= link_to "Delete me!", owner_equipment_path(@equipment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end%>
        <% end %>
        <%= link_to "Book >>", new_equipment_reservation_path(@equipment[:id]), class: "button" %>
      </div>
    </div>
</div>
