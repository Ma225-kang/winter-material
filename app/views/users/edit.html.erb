
<div class="container-new-equipment">
  <div class="form-new-equipment">
    <h1>Modify your info</h1>
    <%= simple_form_for @user do |f|%>
        <%= f.input :first_name, input_html: { :style=> "width: 290px"}%>
        <%= f.input :last_name, input_html: { :style=> "width: 290px"}%>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit 'modify' , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
